<div class="container">
  <head>
    <style>
      table, th, td {
        border: 3px solid black;
      }
    </style>
  </head>
  <body>
    <center>
      <h1>MOVIES</h1>
      <table class="table">
        <tr>
          <th class="text-center">Movie Name</th>
          <th class="text-center">Movie Type</th>
          <th class="text-center">Duration</th>
          <th class="text-center">Click To Edit</th>
        </tr>
        <% @movies.each do |movie| %>
          <tr>
            <td class="text-center">
              <%= movie.movie_name %>
            </td>
            <td class="text-center">
              <%= movie.movie_type %>
            </td>
            <td class="text-center">
              <%= movie.duration %>
            </td>
            <td class="text-center">
              <%= link_to "Edit" , edit_movie_path(movie.id)%>
            </td>
          </tr>
        <% end %>
        <tr>
      </table>
      <p><a class="button" href="/movies/new">Add More Movies</a></p>
      <p><a class="button" href="/">LOGOUT</a></p>
    </center>
  </body>
</div>
