<div class="container">
  <body>
    <center>
        <h1>Fill Your Details</h1>
        <%= form_with(url: "/signup", method: "POST") do %>
          <table class="table">
            <tr>
              <td><%= label_tag(:full_name, "Full Name") %></td>
              <td><%= text_field_tag(:full_name) %></td>
            </tr>
            <br/>
            <br/>
            <tr>
              <td><%= label_tag(:email, "Email") %></td>
              <td><%= text_field_tag(:email) %></td>
            </tr>
            <br/>
            <br/>
            <tr>
              <td><%= label_tag(:password, "Password") %></td>
              <td><%= password_field_tag(:password) %></td>
            </tr>
            <br/>
            <br/>
            <tr>
              <td><%= label_tag(:password_confirmation, "Password Confirmation") %></td>
              <td><%= password_field_tag(:password_confirmation) %></td>
            </tr>
          </table>
            <br/>
            <br/>
            <%= submit_tag("Submit") %>
        <% end %>
    </center>
  </body>
</div>
